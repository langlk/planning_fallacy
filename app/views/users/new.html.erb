<div class="ui middle aligned center aligned grid sign-in-up-grid">
  <div class="column sign-in-up-column">
    <h2 class="ui black image header">
      <div class="content">
        Sign Up
      </div>
    </h2>
    <%= form_for :user, url: '/users', html: {class: "ui large form"} do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name, placeholder: "Name" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="at icon"></i>
            <%= f.email_field :email, placeholder: "E-mail address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: "Password" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
          </div>
        </div>
      </div>
      <%= f.submit "Sign up", class: "ui fluid large blue submit button", id: "new_user_button" %>
    <% end %>
    <div class="ui message">
      Have an account? <%= link_to "Sign In", '/signin' %>
    </div>
  </div>
