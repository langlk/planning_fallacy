<h1>Sign In</h1>

<%= form_tag '/sign_in' do %>
  <div class="input-field">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div class="input-field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Sign in", class: "waves-effect waves-light btn", id: "sign_in_button" %>
<% end %>
