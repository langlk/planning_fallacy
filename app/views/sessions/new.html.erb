<div class="ui middle aligned center aligned grid sign-in-up-grid">
  <div class="column form-column">
    <h2 class="ui black image header">
      <div class="content">
        Sign In
      </div>
    </h2>

    <%= render 'layouts/errors' %>

    <%= form_tag '/sessions', class: "ui large form" do %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="at icon"></i>
            <%= email_field_tag :email, nil, placeholder: "E-mail address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password, nil, placeholder: "Password" %>
          </div>
        </div>
      </div>
      <%= submit_tag "Sign in", class: "ui fluid large blue submit button", id: "sign_in_button" %>
    <% end %>
    <div class="ui message">
      New user? <%= link_to "Sign Up", '/signup' %>
    </div>
  </div>
