<!DOCTYPE html>
<html>
  <head>
    <title>PlanningFallacy</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to 'Sign out', '/sessions', method: :delete %>
      <p><%= flash[:notice] %></p>
      <p><%= flash[:alert]  %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
